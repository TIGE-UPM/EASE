<?php
	class Model_DbTable_Decisions_Mk_Promotion extends Zend_Db_Table{
		protected $_name = 'decision_marketing_promotion';
		
		function add($parameters, $game_id=null, $company_id=null, $round_number=null){	
			$front = Zend_Controller_Front::getInstance();
			if ($game_id==null){
				$game=$front->getParam('activeGame');
				$game_id=$game['id'];
			}
			if ($company_id==null){
				$company=$front->getParam('activeCompany');
				$company_id=$company['id'];
			}
			if ($round_number==null){
				$round=$front->getParam('activeRound');
				$round_number=$round['round_number'];
			}
			$promotionData=$parameters['promotion'];
			$product_number=1;
			while (isset($promotionData['product_'.$product_number])){
				$promotion_product=$promotionData['product_'.$product_number];
				$media_number=1;
				while (isset($promotion_product['media_'.$media_number])){
					$promotion_media=$promotion_product['media_'.$media_number];
					$region_number=1;
					while (isset($promotion_media['region_'.$region_number])){
						$intensity=$promotion_media['region_'.$region_number];
						self::insert(array('game_id'=>$game_id, 'company_id' => $company_id, 'round_number' => $round_number, 'product_number' => $product_number, 'media_number'=>$media_number, 'region_number'=>$region_number, 'intensity'=>$intensity));
					$region_number++;
					}
				$media_number++;
				}
			$product_number++;
			}
		}

		function updateDecision($parameters, $game_id=null, $company_id=null, $round_number=null){	
			$front = Zend_Controller_Front::getInstance();
			if ($game_id==null){
				$game=$front->getParam('activeGame');
				$game_id=$game['id'];
			}
			if ($company_id==null){
				$company=$front->getParam('activeCompany');
				$company_id=$company['id'];
			}
			if ($round_number==null){
				$round=$front->getParam('activeRound');
				$round_number=$round['round_number'];
			}
			$promotionData=$parameters['promotion'];
			$product_number=1;
			while (isset($promotionData['product_'.$product_number])){
				$promotion_product=$promotionData['product_'.$product_number];
				$media_number=1;
				while (isset($promotion_product['media_'.$media_number])){
					$promotion_media=$promotion_product['media_'.$media_number];
					$region_number=1;
					while (isset($promotion_media['region_'.$region_number])){
						$intensity=$promotion_media['region_'.$region_number];
						self::update(array('intensity'=>$intensity), 'game_id = '.$game_id.' AND company_id = '.$company_id.' AND product_number = '.$product_number.' AND media_number = '.$media_number.' AND region_number = '.$region_number. ' AND round_number = '.$round_number);
						
					$region_number++;
					}
				$media_number++;
				}
			$product_number++;
			}							
		}
		function getActiveRoundLastDecisionSaved(){
			$front = Zend_Controller_Front::getInstance();
			$game=$front->getParam('activeGame');
			$company=$front->getParam('activeCompany');
			$round=$front->getParam('activeRound');
			$array=array();
			$decisions=$this->fetchAll('game_id = '.$game['id'].' AND company_id = '.$company['id'].
									   ' AND round_number = '.$round['round_number'], 
									    array('product_number ASC', 'region_number ASC', 'media_number ASC'));
			foreach ($decisions as $decision){
				$array['product_'.$decision['product_number']]
					  ['region_'.$decision['region_number']]
					  ['media_'.$decision['media_number']]=$decision['intensity'];
			}
			return $array;		
		}
		function getDecision($game_id, $company_id, $round_number){
			$array=array();
			$decisions=$this->fetchAll('game_id = '.$game_id.
								   ' AND company_id = '.$company_id.
								   ' AND round_number = '.$round_number, array('product_number ASC', 'region_number ASC', 'media_number ASC'));
			foreach ($decisions as $decision){
				$array['product_'.$decision['product_number']]['region_'.$decision['region_number']]['media_'.$decision['media_number']]=$decision['intensity'];
			}

			return $array;
		}
	}
?>